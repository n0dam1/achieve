<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
  <ul>
    <div class="container-child col-md-2 col-sm-4 col-xs-6">
      <div class="row">
      <%= profile_img(user) %>
      <br>
      <%= truncate(user.email, length: 20) %>
      <% if user.id != current_user.id %>
        <li class="user_index">
          <div class="item">
            <%= link_to user.name, user %>
            <br>
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post', class: 'fa fa-commenting-o'%>
          </div>
          <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>
        </li>
      <% end %>
    </div>
    </div>
  </ul>
  <% end %>
</div>
